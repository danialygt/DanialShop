@inject IResourceManager _resourceManager
@model Master
@{
        var masterFullName = $"{Model.FirstName} {Model.LastName}";
    ViewData["Title"] = masterFullName;
}


    <div class="container py-4">
        <h4 class="mb-5">@string.Format("{0}: {1}", _resourceManager[SharedResource.MasterDetails], masterFullName)</h4>

        <div class="row">
            <div class="col-md-4 text-center">
                <img src="@Model.Photo.Url" class="mb-4 img-fluid" />
                <h6>@masterFullName</h6>
            </div>
            <div class="col-md-8">
                <p class="text-justify">@Html.Raw(@Model.Description)</p>
            </div>
        </div>




        <h5 class="mb-3">@_resourceManager[SharedResource.MasterProducts]</h5>

        <div class="row" style="margin: 0 -.5rem">

            @foreach (var dtoProduct in Model.MasterProducts)
            {

                <div class="col-xl-3 col-lg-4 col-md-6 mb-3 px-2">
                    <div class="card shadow-sm h-100">
                        <a asp-area="" asp-controller="Product" asp-action="Detail" asp-route-id="@dtoProduct.Id">
                            <img src="@dtoProduct.Photos.FirstOrDefault().Url" class="card-img-top img-fluid mh-100" />
                        </a>
                        <div class="card-body d-flex flex-column">
                            <h6 class="card-text text-truncate">
                                <a class="text-primary" asp-area="" asp-controller="Product" asp-action="Detail" asp-route-id="@dtoProduct.Id">
                                    @dtoProduct.Name

                                </a>
                            </h6>
                            <p class="card-text text-justify text-muted">@Html.Raw(@dtoProduct.ShortDescription)</p>
                            <div class="d-flex justify-content-between align-items-center mt-auto">
                                <a class="btn btn-sm btn-info text-white" asp-area="" asp-controller="Product" asp-action="Detail" asp-route-id="@dtoProduct.Id">@_resourceManager[SharedResource.BtnViewText]</a>
                                <a asp-area="" asp-controller="Master" asp-action="Detail" asp-route-id="@dtoProduct.MasterId"><small class="text-muted">@dtoProduct.Master.FirstName @dtoProduct.Master.LastName</small></a>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>




    </div>
