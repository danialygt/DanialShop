@model List<DtoGetAllMaster>
@inject IResourceManager _resourceManager
@{
    ViewData["Title"] = _resourceManager[SharedResource.Masters];
}

    <div class="container py-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fa fa-save"></i>
                    @_resourceManager[SharedResource.Masters]
                </h5>
            </div>
            <div class="card-body">

                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <div class="bg-white rounded border p-2 shadow-sm mb-2">
                            <div class="row">
                                <div class="col-sm-3">
                                    <a><img class="img-fluid" src="@item.PhotoUrl" /></a>
                                </div>
                                <div class="col-sm-9">
                                    <a>
                                        <h5>@item.Name</h5>
                                    </a>
                                    <p class="text-justify text-muted">
                                        @Html.Raw(@item.ShortDescription)
                                    </p>
                                    
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <span>@_resourceManager[SharedResource.NoDate]</span>
                }
            </div>
        </div>

    </div>


