@inject IResourceManager _resourceManager
@model Shop.EndPoints.WebUI.Areas.Admin.Models.Masters.AddMasterViewModel
@{
    ViewData["Title"] = _resourceManager[SharedResource.AddMaster];
}

<div class="container py-4">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="fa fa-save"></i>
                @_resourceManager[SharedResource.AddMaster]
            </h5>
        </div>
        <div class="card-body">
            <form enctype="multipart/form-data" asp-controller="Masters" asp-action="Add" asp-area="Admin" method="post">
                <div class="form-group">
                    <label asp-for="FirstName"></label>
                    <input type="text" class="form-control" asp-for="FirstName">
                    <span asp-validation-for="FirstName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName"></label>
                    <input type="text" class="form-control" asp-for="LastName">
                    <span asp-validation-for="LastName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ShortDescription"></label>
                    <input type="text" class="form-control" asp-for="ShortDescription">
                    <span asp-validation-for="ShortDescription"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Photo"></label>
                    <input type="file" class="form-control" asp-for="Photo">
                    <span asp-validation-for="Photo"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description"></textarea>
                    <span asp-validation-for="Description"></span>
                </div>
                <p class="mb-0 text-left">
                    <button type="submit" class="btn btn-primary">@_resourceManager[SharedResource.Save]</button>
                </p>
            </form>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script>tinymce.init({ selector: 'textarea' });</script>
}
